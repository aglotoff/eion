mixin special-offers(data = {}, mods = {})
    .special-offers(class={
        'special-offers_padding-top'    : mods.paddingTop,
        'special-offers_padding-bottom' : mods.paddingBottom,
    })&attributes(attributes)
        .page__container
            .special-offers__inner
                each box in data
                    .special-offers__box-wrap
                        .special-offers__box
                            .special-offers__desc= box.desc
                            h2.special-offers__title= box.title
                            .special-offers__learn-more
                                a(href=box.link).special-offers__link
                                    | More info here &gt;
                        // /.special-offers__box 
                    // /.special-offers__box-wrap 
            // /.special-offers__inner 
        // /.page__container 
    // /.special-offers 