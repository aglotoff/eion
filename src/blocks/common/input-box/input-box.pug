mixin input-box(data = {}, mods = {})
    form.input-box&attributes(attributes)
        +form-group(data.input, {theme: 'box'}).input-box__field
        +btn(data.btn, {
            theme: 'primary',
            rect: true,
            size: 'large',
        })(
            type = "submit"
            name = "subscribe"
        ).input-box__submit