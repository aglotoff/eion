mixin header__nav-toggle()
    button.header__btn.header__nav-toggle
        i.icon-list.icons(aria-label="Toggle menu")

mixin header__logo(data = {})
    if data.isHomepage
        h1(class={
            header__logo        : true,
            header__logo_left   : !!data.left,
            header__logo_center : !!data.center,
        })
            img(src="img/logo.png", alt="Eion").header__logo-img
            .header__logo-alt Eion
    else
        a(
            href  = "."
            class = {
                header__logo        : true,
                header__logo_left   : !!data.left,
                header__logo_center : !!data.center,
            }
        )
            img(src="img/logo.png", alt="Eion").header__logo-img
            .header__logo-alt Eion

mixin header(data, mods = {})
    header.header&attributes(attributes)
        if data.menu
            .header__left
                nav.header__nav
                    +header__logo({
                        isHomepage : data.isHomepage,
                        left       : true,
                    })
                    +header__nav-list({
                        menu     : data.menu,
                        labelAlt : data.menuLabelAlt
                    })
            // .header__left 

            .header__right
                .header__actions
                    +header__account({align: 'right'})
                    +header__minicart({align: 'right'})
                    button.header__btn.header__search-toggle
                        i.icon-magnifier.icons(aria-label="Toggle search")
                    +header__nav-toggle()
                // .header__actions 
            // .header__right 
        else if data.menuLeft && data.menuRight
            .header__left
                .header__actions
                    +header__nav-toggle()
                    +header__account({align: 'left'})
                // .header__actions 
            // .header__left 

            .header__center
                nav.header__nav
                    +header__nav-list({
                        menu     : data.menuLeft,
                        labelAlt : data.menuLabelAlt
                    })
                    +header__logo({
                        isHomepage : data.isHomepage,
                        center     : true,
                    })
                    +header__nav-list({
                        menu     : data.menuRight,
                        labelAlt : data.menuLabelAlt
                    })
            // .header__center 

            .header__right
                .header__actions
                    +header__minicart({align: 'right'})
                    +header__search({align: 'right'})
                // .header__actions 
            // .header__right 
