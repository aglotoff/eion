mixin form-group(data = {}, mods = {})
    - const theme = mods.theme || 'default';
    .form-group(class="form-group_theme_"+theme)&attributes(attributes)
        input.form-group__input(
            id=data.id
            type=data.type
            name=data.name
            placeholder=data.placeholder
            required=!!data.required
            aria-labelledby=data.id+"-label"
        )
        if data.icon
            label.form-group__icon(
                aria-label=data.label
                id=data.id+"-label"
                for=data.id
            )
                i.icons(class="icon-"+data.icon)
        else
            label.form-group__hidden-label(
                id=data.id+"-label"
                for=data.id
            )= data.label