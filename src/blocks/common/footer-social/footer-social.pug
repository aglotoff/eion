mixin footer-social(data = {}, mods = {})
    ul.footer-social(
        class = mods.light && "footer-social_light"
    )&attributes(attributes)
        li.footer-social__item
            a(href="javascript:void(0);").footer-social__link
                i.fab.fa-twitter(
                    aria-label="Follow us on Twitter"
                )
        li.footer-social__item
            a(href="javascript:void(0);").footer-social__link
                i.fab.fa-facebook-f(
                    aria-label="Follow us on Facebook"
                )
        li.footer-social__item
            a(href="javascript:void(0);").footer-social__link
                i.fab.fa-instagram(
                    aria-label="Follow us on Instagram"
                )
        li.footer-social__item
            a(href="javascript:void(0);").footer-social__link
                i.fab.fa-google-plus-g(
                    aria-label="Follow us on Google Plus"
                )
        li.footer-social__item
            a(href="javascript:void(0);").footer-social__link
                i.fab.fa-pinterest(
                    aria-label="Follow us on Pinterest"
                )