mixin btn(data = {}, mods = {})
    -
        const theme = mods.theme || 'primary';
        const size  = mods.size  || 'default';
        const className = {
            btn                    : true,
            ['btn_theme_' + theme] : true,
            ['btn_size_'  + size ] : true,
        };
    if (data.url)
        a(href=data.url class=className)&attributes(attributes)
            if block
                block
    else
        button(class=className)&attributes(attributes)
            if block
                block