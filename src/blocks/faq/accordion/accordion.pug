mixin accordion(data = {}, mods = {})
    dl.accordion(role="presentation")&attributes(attributes)
        each item, i in data
            dt(
                role="heading"
                aria-level="3"
                class=(i==0) && "accordion__header_active"
            ).accordion__header
                button(
                    aria-expanded="true"
                    aria-controls="sect" + (i + 1)
                    id="accordion" + (i + 1) + "id"
                    type="button"
                ).accordion__toggle
                    span.accordion__title= item.title
                    i.icons.icon-plus.accordion__icon.accordion__icon_open(
                        aria-hidden="true"
                    )
                    i.icons.icon-close.accordion__icon.accordion__icon_close(
                        aria-hidden="true"
                    )
            dd(
                id="sect" + (i + 1)
                role="region"
                aria-labelledby="accordion" + (i + 1) + "id"
            ).accordion__content= item.text