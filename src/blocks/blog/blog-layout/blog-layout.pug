mixin blog-layout(data = {}, mods = {})
    main.blog-layout&attributes(attributes)
        .page__container
            .blog-layout__inner
                .blog-layout__content
                    each post in data.posts
                        +post(post, {level: 2}).blog-layout__post

                    if data.pagination
                        +pagination(data.pagination).blog-layout__pagination
                // .blog-layout__content 

                .blog-layout__sidebar
                    +sidebar-widget({
                        title: 'Categories'
                    }).blog-layout__sidebar-widget
                        +categories(data.categories)
                    +sidebar-widget({
                        title: 'Popular Posts'
                    }).blog-layout__sidebar-widget
                        +popular-posts(data.popularPosts)
                    +sidebar-widget({
                        title: 'Latest Posts'
                    }).blog-layout__sidebar-widget
                        +latest-posts(data.latestPosts)
                    +sidebar-widget({
                        title: 'Tags'
                    }).blog-layout__sidebar-widget
                        +tag-cloud(data.tagCloud)
                    +sidebar-coupon(data.coupon).blog-layout__sidebar-coupon
                // .blog-layout__sidebar 
        // /.page__container
    // .blog-layout 