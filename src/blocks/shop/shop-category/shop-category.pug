mixin shop-category(data = {}, mods = {})
    .shop-category&attributes(attributes)
        .page__container.shop-category__inner
            if data.header
                .shop-category__header
                    h1.title.title_center.shop-category__title= data.header.title
                    p.shop-category__intro= data.header.intro

            .shop-category__row
                .shop-category__content
                    +shop-category-filter(data.filter)

                    if data.grid
                        +shop-category-grid(data.grid).shop-category__grid
                    else if data.list
                        +shop-category-list(data.list, {
                            large: !data.sidebar
                        }).shop-category__list

                    +pagination(data.pagination).shop-category__pagination 
                // /.shop-category__content 

                if data.sidebar
                    .shop-category__sidebar
                        +sidebar-cart()

                        each list in data.sidebar.lists
                            +sidebar-widget({
                                title: list.title
                            }).shop-category__sidebar-widget
                                +sidebar-list(list.items)
                        
                        if data.sidebar.coupon
                            +sidebar-coupon(data.sidebar.coupon).shop-category__sidebar-coupon
                    // /.shop-category__sidebar 
            // /.shop-category__row
        // /.page__container 
    // /.shop-category 